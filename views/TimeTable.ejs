<body>
  <!-- ======= Header ======= -->
  <%- include("templates/header.ejs") %>
  <!--======= SideBar =======-->
  <%- include("templates/sidebar.ejs") %>


    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Time Table</h1>
    
        </div><!-- End Page Title -->
        <div class="container">
          <div class="row mt-5">
            <div class="col-lg-12">
              <div class="white-box">
                <div class="row">
                  <form id="uploadForm" enctype="multipart/form-data" method="post" action="/upload" class="d-flex w-100">
                    
                    <div class="col-lg-4 mb-3">
                      <div class="input-effect sm2_mb_20 md_mb_20">
                        <select class="niceSelect w-100 bb form-control" name="year" id="year" style="font-size: 14px;">
                          <option data-display="Academic Year *" value="">Select Year</option>
                          <option value="2">2</option>
                          <option value="3">3 </option>
                        </select>
                        <span class="focus-border"></span>
                      </div>
                    </div>
                    <div class="col-lg-4 mb-3" id="class-div">
                      <select class="niceSelect w-100 bb form-control" id="section" name="section" style="font-size: 14px;">
                        <option data-display="Select Class *" value="">Section</option>
                        <option value="CSIT 1">CSIT 1</option>
                        <option value="CSIT 2">CSIT 2</option>
                        <option value="CSIT 3">CSIT 3</option>
                      </select>
                    </div>
                    <div class="col-lg-3 mb-3">
                      <div class="input-effect sm2_mb_20 md_mb_20">
                        <input class="form-control" type="file" id="formFile" name="image">
                      </div>
                    </div>
                    
                    <div class="primary-btn-container">
                      <button type="submit" class="btn btn-primary btn-sm">
                        Upload
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
      
        
        <script>
          $(document).ready(function() {
            $('#btnupload').click(function(event) {
              event.preventDefault();
              var fileInput = document.getElementById('formFile');
              var file = fileInput.files[0];
              var year = document.getElementById('year').value;
              var section = document.getElementById('section').value;
              var formData = new FormData();
              formData.append('image', file);
              formData.append('year', year);
              formData.append('section', section);
        
              $.ajax({
                url: '/upload',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                  alert('Image uploaded successfully');
                },
                error: function(err) {
                  console.error('Error uploading image:', err);
                  alert('Error uploading image');
                }
              });
            });
          });
        </script>
        
        <div id="imageContainer" class="card-container"></div>
        <button class="btn-primary " onclick="retrieveimages()">View Time Tables</button>
        
        <script>
          // Function to retrieve and display images
          function retrieveimages() {
            // Fetch images from the /retrivetimetable endpoint
            fetch('/retrivetimetable')
              .then(response => response.json())
              .then(data => {
                const imageContainer = document.getElementById('imageContainer');
                // Clear previous images before appending new ones
                imageContainer.innerHTML = '';
                // Loop through the array of images
                data.forEach(item => {
                  // Create a div element for each image card
                  const cardDiv = document.createElement('div');
                  cardDiv.classList.add('card');
        
                  // Create a p element for year and section
                  const infoElement = document.createElement('p');
                  infoElement.textContent = `Year: ${item.year}, Section: ${item.section}`;
        
                  // Create an img element for the image
                  const imgElement = document.createElement('img');
                  // Set the src attribute to the base64 representation of the image data
                  imgElement.src = `data:image/jpeg;base64,${btoa(new Uint8Array(item.image.data).reduce((data, byte) => data + String.fromCharCode(byte), ''))}`;
          imgElement.alt = 'Image';
          // Adjust as needed

        
        
                  // Append the info and img elements to the card div
                  cardDiv.appendChild(infoElement);
                  cardDiv.appendChild(imgElement);
        
                  // Append the card div to the imageContainer
                  imageContainer.appendChild(cardDiv);
                });
              })
              .catch(error => console.error('Error fetching images:', error));
          }
        </script>
        

       
       



    </main><!-- End #main -->

